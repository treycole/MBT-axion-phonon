&control
  calculation = 'bands'
  prefix      = 'MnBi2Te4'
  outdir      = './tmp/'
  verbosity   = 'high'
  pseudo_dir  = './'
/
&system
  ibrav    = 0,              ! explicit CELL_PARAMETERS
  nat      = 14,             ! Te-Bi-Te-Mn-Te-Bi-Te
  ntyp     = 4,              ! Mn1, Mn2, Bi, Te
  nbnd     = 200
  ecutwfc  = 60.0,           ! plane-wave cutoff (Ry)â€”tune as needed
  ecutrho  = 240.0,
  nosym = .true.             ! must be true for Wannierization
  noinv = .true.             ! just in case for Wannierization
  nspin    = 2,              ! spin-polarized
  starting_magnetization(1) = 0.333,  ! Mn1
  starting_magnetization(2) = -0.333,  ! Mn2
  !angle1(1)   = 0.0   ! Specifies angle of spin with respect to z-axis
  !angle1(2)   = 180.0 ! Mn2 has opposite spin, i.e., angle1 = 180 degrees
  !angle2(1)   = 0.0   ! Specifies the azimuthal angle (in the plane perpendicular to z). It is irrelevant in this case
  !angle2(2)   = 0.0 
  occupations = 'smearing'
  smearing    = 'cold'
  degauss     = 0.002
  vdw_corr    = 'dft-d3'     ! keep vdw correction
  !noncolin   =  .true.
  !lspinorb   =  .true.
/
&electrons
  conv_thr         = 1.0d-7
  electron_maxstep = 80
  mixing_beta      = 0.4
/

