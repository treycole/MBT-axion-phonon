&control
  calculation = 'nscf'
  prefix      = 'MnBi2Te4'
  outdir      = './tmp/'
  verbosity   = 'high'
  pseudo_dir  = './'
/
&system
  ibrav    = 5,              ! use built-in routines to build cell
  celldm(1) = 51.775623441 ! length ob rhombohedral cell edge
  celldm(4) = 0.987491227126468 ! cos(\gamma), with \gamma angle between any pair of primitive lattice vectors.
  nat      = 14,             ! Te-Bi-Te-Mn-Te-Bi-Te
  ntyp     = 4,              ! Mn1, Mn2, Bi, Te
  ecutwfc  = 60.0,           ! plane-wave cutoff (Ry)â€”tune as needed
  ecutrho =  240.0,
  nbnd = 200
  nosym = .false.
  !nspin    = 2,              ! spin-polarized (not needed for SOC calcs)
  starting_magnetization(1) = 0.333,  ! Mn1
  starting_magnetization(2) = 0.333,  ! Mn2
  angle1(1) = 0.0   !Specifies angle of spin with respect to z-axis
  angle1(2) = 180.0 ! Mn2 has opposite spin, i.e., angle1 = 180 degrees
  angle2(1) = 0.0   ! Specifies the azimuthal angle (in the plane perpendicular to z). It is irrelevant in this case
  angle2(2) = 0.0 
  occupations = 'smearing'
  smearing    = 'm-v'
  degauss     = 0.02
  noncolin        =  .true.
  lspinorb        =  .true.
  report = 1
  vdw_corr = 'dft-d3'
!  constrained_magnetization = 'total'
!  fixed_magnetization(1) = 0.0
!  fixed_magnetization(2) = 0.0
!  fixed_magnetization(3) = 0.0
/
&electrons
  conv_thr = 3.0d-5
  electron_maxstep = 300
  mixing_beta = 0.3
!  mixing_mode = 'local-TF'
/

