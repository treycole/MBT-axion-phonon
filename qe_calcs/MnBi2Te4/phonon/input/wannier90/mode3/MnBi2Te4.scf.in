&control
  calculation = 'scf'
  prefix      = 'MnBi2Te4'
  outdir      = './tmp/'
  verbosity   = 'high'
  pseudo_dir  = './'
  !restart_mode = 'restart'
/
&system
  ibrav    = 0,               ! use built-in routines to build cell
  nat      = 14,                 ! Te-Bi-Te-Mn-Te-Bi-Te
  ntyp     = 4,                  ! Mn1, Mn2, Bi, Te
  ecutwfc  = 60.0,               ! plane-wave cutoff (Ry)â€”tune as needed
  ecutrho  = 400.0,
  nosym    = .false.
  starting_magnetization(1) = 0.333,  ! Mn1
  starting_magnetization(2) = 0.333,  ! Mn2
  angle1(1) = 0.0   !Specifies angle of spin with respect to z-axis
  angle1(2) = 180.0 ! Mn2 has opposite spin, i.e., angle1 = 180 degrees
  angle2(1) = 0.0   ! Specifies the azimuthal angle (in the plane perpendicular to z). It is irrelevant in this case
  angle2(2) = 0.0 
  occupations = 'fixed'
  noncolin    = .true.
  lspinorb    = .true.
  report   = 1
  vdw_corr = 'dft-d3'
/
&electrons
  conv_thr = 1.0d-6
  electron_maxstep = 200
  diagonalization='david'
  mixing_beta = 0.4
  mixing_mode = 'local-TF'
  !startingpot = 'file'
/

